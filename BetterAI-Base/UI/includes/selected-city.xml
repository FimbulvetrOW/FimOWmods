				  Width="33" Height="21"
				  PreserveAspect="true"
				  NormalColor="#FFFFFF"
				  DisabledColor="#aaaaaa"/>
			</UIButton>
		</UIRect>

		<UIRect Anchor="UIAnchor.VertStretchLeft" Pivot="UIPivot.BottomLeft" Width="325" BackgroundImageMode="Sliced" BackgroundImage="BlurrBG5" BackgroundImageMaterial="UI/Materials/UIBlur">
